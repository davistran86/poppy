<article class="post-card {{post_class}}">
  <a class="post-card__image-link" href="{{url}}">
    {{#if feature_image}}
      <div class="post-card__image" style="background-image: url({{feature_image}})"></div>
    {{else}}
      <div class="post-card__image" style="background-image: url({{asset "/img/default_background.jpg"}})"></div>
    {{/if}}
  </a>
  <div class="post-card__content">
    <a class="post-card__content-link" href="{{url}}">
      <header>
        {{#if primary_tag}}
          <span class="post-card__tag">{{primary_tag.name}}</span>
        {{/if}}
        <h2 class="post-card__title">{{title}}</h2>
      </header>
      <section>
        <p class="post-card__excerpt">{{excerpt words="33"}}</p>
      </section>
    </a>
    <footer class="post-card__meta">
      <div class="post-card__author">
        {{#primary_author}}
          {{#if profile_image}}
            <img class="avatar" src="{{profile_image}}" alt="{{name}}"/>
          {{/if}}
          <a href="{{url}}">{{name}}</a>
        {{/primary_author}}
      </div>
      <span class="reading-time">{{reading_time}}</span>
    </footer>
  </div>
</article>